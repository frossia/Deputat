.row
  h4 Пользователь: #{@user.last_name.upcase} #{@user.middle_name} #{@user.first_name}

.row
  .well
    dl.dl-horizontal
      dt E-Mail:
      - if @user
        dd = @user.email
      - else
        dd Нету
      dt Создан:
      dd = @user.created_at
      dt Обновлен:
      dd = @user.updated_at

      dt Состоит в группах:
      dd
        = render :partial => "user-grp", :locals => { :user => @user }

    hr
    .text-center
      .btn-group.test-btns
        = link_to "<< Назад", {:action => "index"}, :class => "btn btn-small"
        = link_to "Редактировать", edit_user_path, :class => "btn btn-small"